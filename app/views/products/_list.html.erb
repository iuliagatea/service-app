<%= will_paginate @products %>
<% if @products.size > 0 %>
  <table class="table table-striped custom-table">
  <thead>
    <tr>
      <th>Tenant</th>
      <th>Code - Name</th>
      <th>Estimated price</th>
      <th>Expected completion date</th>
      <% if current_user.is_admin %>
        <th>User</th>
      <% end %>
      <th>Status</th>
      <th>Updated at</th>
      <% if current_user.is_admin %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |product| %>
      <tr>
        <td><%= product.tenant.name %></td>
        <td><%= link_to (product.code + " - " + product.name), tenant_product_path(product, tenant_id: product.tenant_id) %></td>
        <td><%= product.estimated_value %></td>
        <td><%= format_date(product.expected_completion_date) %></td>
        <% if current_user.is_admin %>
          <td>
            <%= link_to product.user.email, tenant_user_products_path(user_id: product.user, tenant_id: product.tenant_id)  %>
          </td>
        <% end %>
        <td style="color: <%= product.last_status.color %>;"><%= link_to product.last_status.name, tenant_status_products_path(status_id: product.last_status, tenant_id: product.tenant_id) %></td>
        <td><%= format_date_time(product.updated_at) %></td>
        <% if current_user.is_admin %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tenant_product_path(product, tenant_id: product.tenant_id), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        tenant_product_path(product, tenant_id: product.tenant_id),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %> 
  <p>There are no products to display</p>
  <div>
    <%= link_to "<i class='fa fa-user-plus'></i> Add Customer Product".html_safe,
                        new_tenant_product_path(tenant_id: params[:tenant_id]),  
                        class: 'navbar-link' %>
  </div>
 
<% end %>
<%= will_paginate @products %>