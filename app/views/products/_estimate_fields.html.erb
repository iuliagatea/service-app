<div class="form-group nested-fields">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="field col-lg-3">
      <%= f.text_field :name, :class => 'form-control', :required => true %>
    </div>
     <%= f.label :quantity, :class => 'control-label col-lg-1' %>
    <div class="field col-lg-2">
      <%= f.text_field :quantity, :class => 'form-control', :required => true %>
    </div>
    <%= f.label :price, :class => 'control-label col-lg-1' %>
    <div class="field col-lg-2">
      <%= f.text_field :price, :class => 'form-control', :required => true %>
    </div>
    <%= link_to_remove_association "<i class='fa fa-remove'></i> ".html_safe, f %>
</div>
