<h3><%= @product.code %> - <%= @product.name %></h3>
<%= form_for(@product, :html => { :class => "form login" }) do |p| %>
  <div class="control-group">
    <div>
      <%= p.label :status_id, "Status", :class => "control-label" %>
    </div>
    <div class="form-group col-md-6 no-left-padding">
    <%= p.collection_select :status_id, @statuses, :id, :name, {include_blank: true}, { class: "form-control" } %>
    </div>
    <div class="form-group col-md-6 no-right-padding">
      <button class="btn btn-primary" type="submit">
      Save
    </button>
    </div>
  </div>
<% end %>
<ul class="listing">
  <% @product.statuses.each do |s| %>
    <div class="row control-group">
      <div class="well col-md-12" style="background-color: <%= s.color %>">
        <li class="status-title">
          <%= "#{s.name}" %>
        </li>
      </div>
    </div>
  <% end %>
</ul>