<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <span>
      <%= link_to ("<i class='fa fa-wrench'></i> " + 'FixIT').html_safe, root_path, 
                                                                          class: "navbar-brand" %>
    </span>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_user && current_user.is_admin? %>
          <li>
            <%= link_to "<i class='fa fa-briefcase'></i> Change plan".html_safe, edit_plan_path, 
                                                        class: "btn btn-primary navbar-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="nav nav-list">
        <ul class="nav navbar-right col-md-4">
        <% if current_user %>
          <li class="col-md-8 user-name">
            <% if current_user && current_user.is_admin? %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= ('<i class="fa fa-building"></i> ' + truncate(current_user.tenants.first.name, length: 25)).html_safe %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "<i class='fa fa-edit'></i> Edit profile".html_safe, 
                        edit_user_registration_path, title: 'Edit Profile',  class: 'navbar-link' %>
                  </li>
                  <li><%= link_to "<i class='fa fa-user-plus'></i> Add Customer Product".html_safe,
                        new_tenant_product_path(tenant_id: Tenant.current_tenant_id),  class: 'navbar-link' %>
                  </li>
                  <li>
                    <%= link_to "<i class='fa fa-tasks'></i> Products".html_safe, 
                        tenant_products_path(tenant_id: Tenant.current_tenant_id), class: "navbar-link" %>
                  </li>
                  <li>
                    <%= link_to "<i class='fa fa-list'></i> Statuses".html_safe, 
                        tenant_statuses_path(tenant_id: Tenant.current_tenant_id), class: "navbar-link" %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li class="logout">
                    <%= link_to( ("<i class='fa fa-unlock'></i> " + "Sign out").html_safe, destroy_user_session_path, 
                        class: 'btn btn-xs btn-danger', title: 'Logout', :method => :delete) %>
                    </li>
                </ul> 
            <% else %>
              <%= link_to ('<i class="fa fa-user"></i> ' + truncate(current_user.email, length: 25)).html_safe, edit_user_registration_path, title: 'Edit Profile' %>
            <% end %>
          </li>
          <li class="col-md-1"> 
          </li>
          <li class="col-md-2 logout"><%= link_to( ("<i class='fa fa-unlock'></i> ").html_safe, destroy_user_session_path, class: 'btn btn-xs btn-danger', title: 'Logout', :method => :delete) %></li>
        <% else %>
          <li class="col-md-4 pull-right">
          <%= link_to(("<i class='fa fa-lock'></i> " + 'Sign In').html_safe, new_user_session_path, class: 'btn btn-primary', title: 'Sign In') %>
          </li>
        <% end %>
        </ul>
      </ul>
    </div>
  </div>
</div>