<%= form_for @product_status, :html => { :class => "form-horizontal product_status" } do |f| %>

  <% if @product_status.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product_status.errors.count, "error") %> prohibited this product_status from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product_status.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_id) %>
  </div>
  <div class="form-group">
    <%= f.label :status_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                product_statuses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
