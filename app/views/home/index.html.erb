<% if current_user %>
    <h3>Products</h3>
    <%= render 'products/list', obj: @products %>
  <% if current_user.is_admin %>
    <% if @products.size > 0 %>
      <h4>Products by month</h4>
        <%= column_chart @products.group_by_month(:created_at, format: "%b %Y", last: 8).count %>
      <h4>Products by user</h4>
      <%= bar_chart @products.joins(:user).group("users.email").count %>
    <% end %>
  <% end %>
<% else %>
  <div class="row">
    <div class="plans clearfix">
      <div class="col-lg-3 col-lg-offset-3 plan">
        <h2>Free Plan</h2>
        <div class="price pull-right">
          Price: Free
        </div>
        <div class="features">
          <ul>
            <li>Unlimited file uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li>500 customers</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
        </p>
      </div>
      <div class="col-lg-3 plan">
        <h2>Premium Plan</h2>
        <div class="price pull-right">
          Price: $10
        </div>
        <div class="features">
          <ul>
            <li>Unlimited file uploads</li>
            <li>Responsive design</li>
            <li>Access anywhere</li>
            <li class='extra'>Unlimited customers</li>
          </ul>
        </div>
        <p>
          <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
        </p>
      </div>
    </div>
  </div>
<% end %>