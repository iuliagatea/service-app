<% if current_user %>
    <h3>Products</h3>
    <%= render 'products/list', obj: @products %>
  <% if current_user.is_admin %>
    <% if @products.size > 0 %>
      <h4>Products by month</h4>
        <%= column_chart @products.group_by_month(:created_at, format: "%B %d, %Y", last: 8).count %>
      <h4>Products by user</h4>
      <%= bar_chart @products.joins(:user).group("users.email").count %>
    <% end %>
  <% end %>
<% else %>
  <% if @tenants && @tenants.size > 0 %>
    <% @tenants.each do |t| %>
      <h3>
        <%= t.name %>
        <span class="pdf-download no-black-hover">
          <%= link_to "<i class='fa fa-envelope'></i> ".html_safe, 
                        tenant_demand_offer_path(t),
                        title: 'Demand offer' %>
        </span>  
      </h3>
      <% if t.categories.any? %>
        <p><%= render t.categories %></p>
      <% end %>
      <p><%= t.description %></p>
    <% end %>
  <% end %>
<% end %>