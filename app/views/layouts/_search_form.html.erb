<%= form_tag({:controller => "home", :action => "index"}, {:method => "get", :class => "form-horizontal"}) do %>
  <div class="row col-md-10 search">
    <%= text_field_tag(:query, "", class:'form-control', placeholder: 'Search service provider..' ) %>
  </div> 
  <div class="row col-md-3">
    <% submit_tag "<i class='fa fa-search'></i> Search".html_safe, class: "btn btn-primary", id:"submit" %>
    <%= button_tag(type: "submit", class: "btn btn-default", id:"submit") do %>
      <i class="fa fa-search"></i>Search
    <% end %>
  </div>
<% end %>