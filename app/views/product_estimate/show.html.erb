<%- model_class = ProductEstimate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @product_estimate.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimate_id) %>:</strong></dt>
  <dd><%= @product_estimate.estimate_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              product_estimates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_estimate_path(@product_estimate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_estimate_path(@product_estimate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
